

@import url('https://fonts.googleapis.com/css2?family=Charis+SIL:ital@1&display=swap');

*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Charis SIL', serif;
}

:root{
    --main-bg:#1e272e;
    --main-color:#0097e6;

}
html{
    font-size: 62.5%;

}
body{
    height: 100vh;
 display: flex;
 flex-direction: column;
 
}

.row{
    margin: 0;
}
.main_menu{
    background-color: var(--main-bg);
}
.navbar{
    color: #fff;
    background-color: var(--main-bg);
    padding: 2rem 0;


}
.navbar li{
    margin-left: 2rem;
}
.navbar a{
    color: #fff;
    font-size: 1.8rem;
}
.navbar:hover{
    color: var(--main-color);
}
#navclps{
background-color:grey;
}
.fa-snowflake-o{
    font-size:2rem;
    transition: all linear;
    animation: rotate 2s linear infinite;
    color: var(--main-color);
}
@keyframes rotate {
    0%{
        transform: rotate(0deg);
    }
    100%{
        transform: rotate(100deg);
    }
    
}

/* main_header */


.main_header_left{
    display: flex;
    height: 70rem;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.main_header_left p{
    font-size: 2rem;

}   
.main_header_left h1{
    font-size: 4rem;
    margin: 1rem 0 4rem 0;
    text-transform: capitalize;
}
.main_header_left .text_clr{
  color: var(--main-color);

}
.main_header_left button{
    border: none;
    padding: 0.8rem 1.8rem;
    font-size: 1.4rem;
    border-radius: 2rem;
    text-transform: capitalize;
    box-shadow: 0 8px 6px  -6px #000;
    outline: none;

}
.main_header_left button:hover{
    box-shadow: 0 8px 6px -6px var(--main-color);
}

.main_header_right{
    display: flex;
    height: 70rem;
    justify-content: center;
    align-items: center;
}

.main_header_right figure img{
    filter:drop-shadow(0 0.5rem 1rem rgb(0,0,0.3));

} 

.errimg img{
    width:60rem;
    height:30rem;
}

{{!-- Weather --}}
.temp_form{
    width:60%;
    position:relative;
    margin:10rem auto 6rem;
}
.cityname{
    width:100%;
    padding:2rem 5rem 2rem 2rem;
    background:#1e202b;
    color:white;
    outline:none;
    border:none;
    font-size:1.7rem;
    border-radius:3rem;

}

::placeholder{
    color:#bfc1c8;

}
#submitbtn{
    position:absolute;
    top:5px;
    right:5px;
    bottom:5px;
    border:none;
    background:#009ad8;
    padding:0 3rem;
    border-radius:3rem;
    color:white;
    font-size:1.6rem;
}

#submitbtn:hover{
    color:#009ad8;
    background-color:#fff;

}

.tempInformation{
width:50rem;
margin:auto;
min-height:20rem;
background-color:#323544;
border-radius:1rem;
overflow:hidden;

}

.top_layer{
    width:100%;
    height:20%;
    background-color:#2d303d;
    display:flex;
    justify-content:space-between;
    align-items:center;
    border-radius:1rem;

}

.top_layer p{
    padding:2rem;
    font-size:3rem;

color:#fff;
font-weight:400;

}
.main_layer{
    width:100%;
    height:80%;
    display:flex;
    flex-direction:column;
}

.main_layer #city_name{
    padding:2rem 0;
    color:#bfc1c8;
    font-weight:300;
    font-size:3rem;

}
.main_layer, .middle_layer{
    display:flex;
    justify-content:space-around;
    color:#fff;

}
 .middle_layer,.middle_layer p,
 .main_layer ,.middle_layer, #emoji{
    font-size:6rem;
    font-weight:900;

 }


 #emoji{
    color:#009ad8;
    font-size:7rem;

 }

 sup{
    font-size:5rem;
    margin-top:-2rem;

 }
.data_hide{
    visibility:hidden;
    transition:all 0.3s linear;

}


/* footer */

footer{
    width: 100%;
    background-color: var(--main-bg);
margin-top: auto;
}
footer p{
    margin: 0;
    text-align: center;
    color: #fff;
    line-height: 5rem;

    font-size: 1.4rem;
}

/* resposuve */
@media(min-width:769px){

    .temp_form{
    }
    .tempInformation{
        overflow:hidden;
        height:20rem;

   }
}
@media (max-width:768px) {
    .main_header_left{
        height: auto;
        margin: 5rem 0;
    }

    .main_header_right{
        height: auto;
        margin-top: 3rem ;

    }

    
    .tempInformation{
width:30rem;
margin:auto;
min-height:20rem;
background-color:#323544;
border-radius:1rem;
overflow-y:hidden;

}


